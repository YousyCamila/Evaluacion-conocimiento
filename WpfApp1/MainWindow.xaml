<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionBiblioteca"
        mc:Ignorable="d" Title="Gestión de Biblioteca" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" Background="#FFE4C6C6">
            <Label Content="Título del Libro:"/>
            <TextBox x:Name="txtTituloLibro" Height="52"/>
            <Label Content="Nombre del Autor:"/>
            <TextBox x:Name="txtNombreAutor" Height="43"/>
            <Button Content="Agregar Libro" Click="AgregarLibro_Click" Height="35" Background="#FFE0E0E0"/>
            <Label Content="Buscar Libro:"/>
            <TextBox x:Name="txtBuscarLibro" Height="43"/>
            <Button Content="Buscar" Click="BuscarLibro_Click" Height="35"/>
            <ListBox x:Name="lstResultadosBusqueda"/>
            <Label Content="Nombre del Usuario:"/>
            <TextBox x:Name="txtNombreUsuario" Height="36"/>
            <Button Content="Registrar Préstamo" Click="RegistrarPrestamo_Click" Height="39"/>
        </StackPanel>
    </Grid>
</Window>
